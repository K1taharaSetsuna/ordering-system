page {
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
}

.header {
  margin-bottom: 20rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.menu-list {
  height: 100vh;
}

.dish-card {
  display: flex;
  background: white;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  padding: 20rpx;
}

.dish-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #eee;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.dish-price {
  font-size: 34rpx;
  color: #e64340;
  font-weight: bold;
}

.add-btn {
  background-color: #07c160;
  color: white;
  font-size: 24rpx;
  margin: 0; 
  align-self: flex-end;
}

.empty-tip {
  text-align: center;
  color: #999;
  margin-top: 100rpx;
}
