page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
}

/* 顶部栏 */
.top-bar {
  background-color: white;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.store-info {
  margin-bottom: 20rpx;
}

.store-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.store-distance {
  font-size: 24rpx;
  color: #999;
}

.dining-mode-switch {
  display: flex;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 4rpx;
  width: 300rpx;
}

.mode-item {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
  font-size: 28rpx;
  border-radius: 36rpx;
  color: #666;
}

.mode-item.active {
  background-color: #333;
  color: #dcb372; /* 黑金配色或红白配色 */
  font-weight: bold;
}

/* 菜单区域 */
.menu-container {
  flex: 1;
  display: flex;
  overflow: hidden;
}

/* 左侧边栏 */
.sidebar {
  width: 180rpx;
  background-color: #f5f5f5;
  height: 100%;
}

.category-item {
  padding: 30rpx 20rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666;
}

.category-item.active {
  background-color: white;
  color: #333;
  font-weight: bold;
  border-left: 6rpx solid #C00000;
}

/* 右侧内容 */
.content {
  flex: 1;
  background-color: white;
  height: 100%;
  padding: 0 20rpx;
}

.category-header {
  padding: 20rpx 0;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.dish-item {
  display: flex;
  margin-bottom: 30rpx;
}

.dish-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
  background-color: #eee;
  margin-right: 20rpx;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.dish-desc {
  font-size: 22rpx;
  color: #999;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dish-price {
  color: #C00000;
  font-size: 32rpx;
  font-weight: bold;
}

.add-btn {
  background-color: #C00000;
  color: white;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 50%;
  padding: 0;
  font-size: 36rpx;
  margin: 0;
}

.footer-spacer {
  height: 120rpx;
}

/* 底部购物车 */
.cart-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: white;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
  z-index: 100;
}

.cart-icon-wrapper {
  position: relative;
  margin-right: 30rpx;
}

.cart-icon {
  width: 60rpx;
  height: 60rpx;
}

.badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: #C00000;
  color: white;
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 20rpx;
}

.cart-price {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.total-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.delivery-fee {
  font-size: 20rpx;
  color: #999;
}

.checkout-btn {
  background-color: #ccc;
  color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 0 40rpx;
  line-height: 70rpx;
  margin: 0;
}

.checkout-btn.active {
  background-color: #C00000;
}

/* 购物车弹窗 */
.cart-popup {
  position: fixed;
  bottom: 100rpx;
  left: 0;
  right: 0;
  background-color: white;
  z-index: 99;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
  max-height: 60vh;
  display: flex;
  flex-direction: column;
}

.cart-header {
  padding: 20rpx;
  background-color: #f5f5f5;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666;
}

.cart-list {
  padding: 20rpx;
}

.cart-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.cart-name {
  flex: 1;
  font-size: 28rpx;
}

.cart-actions {
  display: flex;
  align-items: center;
}

.cart-actions button {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0;
  margin: 0 10rpx;
  background-color: #f5f5f5;
  color: #333;
}

.cart-qty {
  font-size: 28rpx;
  min-width: 40rpx;
  text-align: center;
}

